<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandi.funtastiq.Group"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="Conclusion Outing Fantastique Indosat Ooredoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        android:layout_margin="5dp" />

    <TextView
        android:text="*Require"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        app:srcCompat="@drawable/icon_idosat"
        android:id="@+id/imageView9" />

    <TextView
        android:text="Your Conclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView44"
        android:textColor="@color/colortext"
        android:layout_margin="5dp"
        android:textStyle="normal|bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_weight="0.33">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="0.77" />
    </FrameLayout>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_margin="5dp" />

</LinearLayout>
