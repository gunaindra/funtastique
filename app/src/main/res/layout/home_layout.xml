        <TextView
            android:text="Untuk menjalankan misi silahkan menuju DASHBOARD,"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center" />
        <TextView
            android:text="Untuk menulis jurnal/laporan design thinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center" />

        <TextView
            android:text="Silahkan menulis dalam halaman ENTRY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center" />
        <TextView
            android:text="Untuk melihat hasilnya dapat dilihat dalam PAGE PREVIEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Oke para Indosaters."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center" />
        <TextView
            android:text="Selamat bergembira dan selalu berfikir positif."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Salam berbudaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textSize="12sp"
            android:textColor="?android:attr/panelColorForeground"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>